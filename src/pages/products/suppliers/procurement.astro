---
import Layout from "../../../layouts/Layout.astro";
import Container from "../../../components/Container.astro";
import Icon from "../../../components/Icon.astro";

const supplierBenefits = [
    {
        title: "Instant Payments",
        description: "Get paid upfront for your Saudi customers",
        icon: "money",
        highlight: "24hr payment guarantee"
    },
    {
        title: "Zero Risk",
        description: "We handle all payment collection from Saudi buyers",
        icon: "shield-check",
        highlight: "100% secure"
    },
    {
        title: "Market Expansion",
        description: "Grow your Saudi customer base without payment risks",
        icon: "chart-bar",
        highlight: "1000+ buyers"
    }
];

const buyerBenefits = [
    {
        title: "Extended Terms",
        description: "Pay in comfortable installments",
        icon: "calendar",
        highlight: "Up to 12 months"
    },
    {
        title: "Direct Imports",
        description: "Import directly from international suppliers",
        icon: "globe",
        highlight: "Global reach"
    },
    {
        title: "Quick Approval",
        description: "Fast credit approval process",
        icon: "lightning",
        highlight: "24hr approval"
    }
];

const steps = [
    {
        title: "Register",
        description: "Quick onboarding process",
        icon: "document-check",
        color: "from-primary to-primary-dark"
    },
    {
        title: "Get Approved",
        description: "Fast credit assessment",
        icon: "shield-check",
        color: "from-blue-500 to-purple-500"
    },
    {
        title: "Start Trading",
        description: "Instant payments & flexible terms",
        icon: "arrows-right-left",
        color: "from-green-500 to-emerald-600"
    }
];
---

<Layout title="Procurement Accelerator | Buildnow">
    <div class="min-h-screen bg-white dark:bg-gray-900">
        {/* Hero */}
        <div class="relative overflow-hidden">
            <div class="absolute inset-0 bg-gradient-to-br from-primary/10 to-transparent dark:from-primary/20"></div>
            <Container>
                <div class="relative pt-32 pb-16 text-center">
                    <div class="inline-flex items-center px-4 py-2 rounded-full bg-primary/10 text-gray-900 dark:text-white mb-8 animate-fade-in">
                        <Icon name="sparkles" class="w-6 h-6 mr-2 text-primary" />
                        <span class="text-base font-medium">Trusted by 1000+ Global Suppliers</span>
                    </div>
                    <h1 class="text-5xl md:text-6xl xl:text-7xl font-bold text-gray-900 dark:text-white mb-6">
                        Bridging <span class="text-transparent bg-clip-text bg-gradient-to-r from-primary to-primary-dark">International Trade</span>
                    </h1>
                    <p class="text-xl text-gray-600 dark:text-gray-400 mb-8 max-w-2xl mx-auto">
                        Suppliers get paid instantly, while Saudi buyers enjoy flexible payment terms.
                    </p>
                    <div class="flex flex-wrap justify-center gap-4">
                        <button 
                            onclick="openLeadForm()"
                            class="inline-flex h-14 items-center justify-center px-8 bg-gradient-to-r from-primary to-primary-dark text-white rounded-lg hover:shadow-lg hover:shadow-primary/30 transition-all duration-300 transform hover:scale-105 text-lg"
                        >
                            Get Started
                            <Icon name="arrow-right" class="w-6 h-6 ml-2" />
                        </button>
                        <a 
                            href="#how-it-works"
                            class="inline-flex h-14 items-center justify-center px-8 border border-gray-200 dark:border-gray-700 text-gray-600 dark:text-gray-300 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-800 transition-all duration-300 text-lg"
                        >
                            Learn More
                            <Icon name="chevron-down" class="w-6 h-6 ml-2" />
                        </a>
                    </div>
                </div>
            </Container>
        </div>

        {/* Steps */}
        <div class="border-y border-gray-100 dark:border-gray-800 bg-gray-50 dark:bg-gray-800/50" id="how-it-works">
            <Container>
                <div class="py-16">
                    <h2 class="text-4xl font-bold text-center text-gray-900 dark:text-white mb-12">How It Works</h2>
                    <div class="grid md:grid-cols-3 gap-8">
                        {steps.map((step, index) => (
                            <div class="group relative p-8 bg-white dark:bg-gray-800 rounded-2xl shadow-xl hover:shadow-2xl transition-all duration-300 hover:-translate-y-1">
                                <div class={`absolute inset-0 bg-gradient-to-br ${step.color} opacity-0 group-hover:opacity-5 rounded-2xl transition-opacity duration-300`}></div>
                                <div class="flex items-start gap-4">
                                    <div class="flex-shrink-0 w-14 h-14 rounded-xl bg-gradient-to-br from-primary/10 to-primary/30 flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
                                        <Icon name={step.icon} class="w-7 h-7 text-primary" />
                                    </div>
                                    <div>
                                        <h3 class="text-2xl font-semibold text-gray-900 dark:text-white mb-2">
                                            {index + 1}. {step.title}
                                        </h3>
                                        <p class="text-lg text-gray-600 dark:text-gray-400">{step.description}</p>
                                    </div>
                                </div>
                            </div>
                        ))}
                    </div>
                </div>
            </Container>
        </div>

        {/* Benefits */}
        <Container>
            <div class="py-16">
                <div class="grid lg:grid-cols-2 gap-16">
                    {/* Suppliers */}
                    <div class="space-y-8">
                        <h2 class="text-4xl font-bold text-gray-900 dark:text-white">For International Suppliers</h2>
                        <div class="space-y-6">
                            {supplierBenefits.map(benefit => (
                                <div class="group p-8 bg-white dark:bg-gray-800 rounded-xl shadow-lg hover:shadow-xl transition-all duration-300">
                                    <div class="flex items-start gap-4">
                                        <div class="flex-shrink-0 w-14 h-14 rounded-xl bg-gradient-to-br from-primary/10 to-primary/30 flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
                                            <Icon name={benefit.icon} class="w-7 h-7 text-primary" />
                                        </div>
                                        <div>
                                            <h3 class="text-2xl font-semibold text-gray-900 dark:text-white">{benefit.title}</h3>
                                            <p class="text-lg text-gray-600 dark:text-gray-400 mt-2">{benefit.description}</p>
                                            <span class="inline-block mt-3 px-4 py-2 bg-primary/10 text-primary text-base font-medium rounded-full">
                                                {benefit.highlight}
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            ))}
                        </div>
                    </div>

                    {/* Buyers */}
                    <div class="space-y-8">
                        <h2 class="text-4xl font-bold text-gray-900 dark:text-white">For Saudi Buyers</h2>
                        <div class="space-y-6">
                            {buyerBenefits.map(benefit => (
                                <div class="group p-8 bg-white dark:bg-gray-800 rounded-xl shadow-lg hover:shadow-xl transition-all duration-300">
                                    <div class="flex items-start gap-4">
                                        <div class="flex-shrink-0 w-14 h-14 rounded-xl bg-gradient-to-br from-primary/10 to-primary/30 flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
                                            <Icon name={benefit.icon} class="w-7 h-7 text-primary" />
                                        </div>
                                        <div>
                                            <h3 class="text-2xl font-semibold text-gray-900 dark:text-white">{benefit.title}</h3>
                                            <p class="text-lg text-gray-600 dark:text-gray-400 mt-2">{benefit.description}</p>
                                            <span class="inline-block mt-3 px-4 py-2 bg-primary/10 text-primary text-base font-medium rounded-full">
                                                {benefit.highlight}
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            ))}
                        </div>
                    </div>
                </div>
            </div>
        </Container>

        {/* CTA */}
        <div class="relative overflow-hidden border-t border-gray-100 dark:border-gray-800 bg-gray-50 dark:bg-gray-800/50">
            <div class="absolute inset-0 bg-gradient-to-br from-primary/5 to-transparent dark:from-primary/10"></div>
            <Container>
                <div class="relative py-16 text-center">
                    <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-6">Ready to Transform Your Trade?</h2>
                    <p class="text-lg text-gray-600 dark:text-gray-400 mb-8 max-w-2xl mx-auto">
                        Join thousands of businesses already using our platform to accelerate their international trade
                    </p>
                    <button 
                        onclick="openLeadForm()"
                        class="inline-flex h-12 items-center justify-center px-8 bg-gradient-to-r from-primary to-primary-dark text-white rounded-lg hover:shadow-lg hover:shadow-primary/30 transition-all duration-300 transform hover:scale-105"
                    >
                        Apply Now
                        <Icon name="arrow-right" class="w-5 h-5 ml-2" />
                    </button>
                </div>
            </Container>
        </div>
    </div>
</Layout> 

<style>
    @keyframes fade-in {
        from {
            opacity: 0;
            transform: translateY(-10px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .animate-fade-in {
        animation: fade-in 0.5s ease-out forwards;
    }
</style> 