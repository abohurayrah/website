---
import Layout from "../../../layouts/Layout.astro";
import Container from "../../../components/Container.astro";
import Icon from "../../../components/Icon.astro";

const benefits = [
    {
        title: "Smart Credit Assessment",
        description: "Get approved based on your business potential and future growth, not just historical data.",
        icon: "chart-bar",
        highlight: "Up to 10M SAR"
    },
    {
        title: "Global Supplier Network",
        description: "Access pre-vetted suppliers from 40+ countries with verified quality standards.",
        icon: "globe-alt",
        highlight: "40+ Countries"
    },
    {
        title: "Trade Protection",
        description: "Full coverage against quality issues, delays, and non-compliance with standards.",
        icon: "shield-check",
        highlight: "100% Protected"
    },
    {
        title: "Digital Customs Support",
        description: "Automated customs documentation and compliance checks for smooth imports.",
        icon: "document-check",
        highlight: "24/7 Support"
    }
];

const features = [
    {
        title: "AI-Powered Matching",
        description: "Get matched with the perfect suppliers based on your needs and preferences",
        icon: "sparkles"
    },
    {
        title: "Quality Assurance",
        description: "Third-party inspections and quality verification before shipment",
        icon: "check-badge"
    },
    {
        title: "Market Intelligence",
        description: "Real-time insights on global prices and supplier reliability",
        icon: "presentation-chart-line"
    }
];

const marketHighlights = [
    { value: "40+", label: "Source Countries" },
    { value: "10M", label: "SAR Credit Limit" },
    { value: "100%", label: "Quality Guarantee" },
    { value: "24/7", label: "Support Available" }
];
---

<Layout title="Import to Saudi Arabia | Buildnow">
    <div class="relative">
        {/* Background Elements - Now with proper bottom spacing */}
        <div class="absolute inset-0 pointer-events-none overflow-hidden">
            <div class="absolute inset-0 bg-white dark:bg-gray-900"></div>
            {/* Large primary blob - top right */}
            <div class="absolute right-[5%] -top-20 w-[800px] h-[800px] bg-yellow-300/20 dark:bg-yellow-300/10 rounded-full blur-3xl animate-float"></div>
            {/* Medium blob - middle left */}
            <div class="absolute -left-[10%] top-[30%] w-[600px] h-[600px] bg-yellow-300/15 dark:bg-yellow-300/10 rounded-full blur-3xl animate-float-delayed"></div>
            {/* Small blob - middle right */}
            <div class="absolute right-[15%] top-[45%] w-[500px] h-[500px] bg-yellow-300/20 dark:bg-yellow-300/10 rounded-full blur-3xl animate-float"></div>
            {/* Large blob - bottom left */}
            <div class="absolute -left-[5%] top-[60%] w-[700px] h-[700px] bg-yellow-300/15 dark:bg-yellow-300/10 rounded-full blur-3xl animate-float-delayed"></div>
            {/* Medium blob - bottom right */}
            <div class="absolute right-[10%] top-[75%] w-[600px] h-[600px] bg-yellow-300/20 dark:bg-yellow-300/10 rounded-full blur-3xl animate-float"></div>
            {/* Extra small floating blobs */}
            <div class="absolute left-[25%] top-[20%] w-[300px] h-[300px] bg-yellow-300/15 dark:bg-yellow-300/10 rounded-full blur-3xl animate-float-slow"></div>
            <div class="absolute right-[30%] top-[65%] w-[250px] h-[250px] bg-yellow-300/20 dark:bg-yellow-300/10 rounded-full blur-3xl animate-float-slower"></div>
        </div>

        {/* Content */}
        <div class="relative">
            {/* Hero Section */}
            <div class="relative min-h-[90vh] flex items-center">
                {/* Background Elements */}
                <div class="absolute inset-0 bg-white dark:bg-gray-900"></div>
                <div class="absolute inset-0">
                    <div class="absolute right-[10%] top-32 w-96 h-96 bg-primary/10 rounded-full blur-3xl animate-float"></div>
                    <div class="absolute left-[5%] top-[20%] w-72 h-72 bg-primary/5 rounded-full blur-3xl animate-float-delayed"></div>
                    <div class="absolute right-[20%] bottom-[10%] w-80 h-80 bg-primary/10 rounded-full blur-3xl animate-float"></div>
                    <div class="absolute left-[15%] bottom-[30%] w-64 h-64 bg-primary/5 rounded-full blur-3xl animate-float-delayed"></div>
                </div>
                
                <Container>
                    <div class="relative grid lg:grid-cols-2 gap-20 items-center pt-32 lg:pt-20">
                        {/* Left Column - Content */}
                        <div class="space-y-10 text-center lg:text-left">
                            <div class="flex flex-col lg:flex-row items-center gap-4 lg:gap-8">
                                <div class="inline-flex items-center px-5 py-2.5 rounded-full bg-yellow-300/20 dark:bg-yellow-300/10 text-gray-900 dark:text-white">
                                    <Icon name="globe-alt" class="w-5 h-5 mr-2.5 text-yellow-400" />
                                    <span class="text-sm font-semibold tracking-wide">Access 40+ Global Markets</span>
                                </div>
                            </div>
                            
                            <h1 class="text-4xl lg:text-5xl xl:text-6xl font-extrabold text-gray-900 dark:text-white leading-[1.15] tracking-tight">
                                Source Globally, <span class="text-yellow-400 dark:text-yellow-300 neon-text">Grow Locally</span>
                            </h1>
                            
                            <p class="text-xl text-gray-700 dark:text-gray-200 max-w-xl mx-auto lg:mx-0 leading-relaxed">
                                Transform your business with access to global suppliers. Get up to 10M SAR in import financing with quality guarantee.
                            </p>

                            <div class="flex justify-center">
                                <button 
                                    onclick="openLeadForm()"
                                    class="w-full sm:w-auto px-8 py-4 bg-yellow-300 text-gray-900 rounded-xl hover:bg-yellow-400 transition-all duration-300 font-semibold text-lg shadow-[0_0_15px_rgba(253,224,71,0.3)] dark:shadow-[0_0_15px_rgba(253,224,71,0.15)]"
                                >
                                    <span class="relative z-10 flex items-center justify-center">
                                        Start Importing Now
                                        <Icon name="arrow-right" class="w-5 h-5 ml-2 transition-transform group-hover:translate-x-1" />
                                    </span>
                                </button>
                            </div>
                        </div>

                        {/* Right Column - Visual */}
                        <div class="relative hidden lg:block">
                            <div class="absolute inset-0 bg-gradient-to-br from-primary to-primary-dark opacity-10 rounded-3xl transform rotate-3"></div>
                            <div class="relative bg-white dark:bg-gray-800 rounded-3xl p-10 shadow-2xl border-2 border-yellow-300/30 dark:border-yellow-300/20">
                                {/* Market Size Highlight */}
                                <div class="mb-10">
                                    <div class="flex items-center justify-between mb-6">
                                        <h3 class="text-xl font-bold text-gray-900 dark:text-white">Global Import Benefits</h3>
                                        <div class="flex items-center gap-2">
                                            <img src="/images/saudi-map.png" alt="Saudi Arabia Map" class="w-8 h-8" />
                                            <Icon name="globe-alt" class="w-8 h-8 text-yellow-400" />
                                        </div>
                                    </div>
                                    <div class="grid grid-cols-2 gap-6">
                                        {marketHighlights.map(highlight => (
                                            <div class="text-center p-5 rounded-2xl bg-gray-50 dark:bg-gray-700 hover:bg-primary/10 transition-colors duration-300">
                                                <div class="text-2xl font-bold text-yellow-400 dark:text-yellow-300 neon-text mb-2">{highlight.value}</div>
                                                <p class="text-sm font-medium text-gray-700 dark:text-gray-300">{highlight.label}</p>
                                            </div>
                                        ))}
                                    </div>
                                </div>

                                {/* Success Indicators */}
                                <div class="space-y-5">
                                    <div class="flex items-center gap-4 p-5 bg-green-100 dark:bg-green-900 rounded-xl">
                                        <div class="w-12 h-12 rounded-full bg-green-500 flex items-center justify-center">
                                            <Icon name="shield-check" class="w-6 h-6 text-white" />
                                        </div>
                                        <div class="flex-1">
                                            <h4 class="text-base font-semibold text-gray-900 dark:text-white mb-1">Quality Guaranteed</h4>
                                            <p class="text-sm text-gray-700 dark:text-gray-300">Third-party inspection before shipment</p>
                                        </div>
                                    </div>
                                    <div class="flex items-center gap-4 p-5 bg-blue-100 dark:bg-blue-900 rounded-xl">
                                        <div class="w-12 h-12 rounded-full bg-blue-500 flex items-center justify-center">
                                            <Icon name="document-check" class="w-6 h-6 text-white" />
                                        </div>
                                        <div class="flex-1">
                                            <h4 class="text-base font-semibold text-gray-900 dark:text-white mb-1">Smart Customs</h4>
                                            <p class="text-sm text-gray-700 dark:text-gray-300">Automated documentation & compliance</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </Container>
            </div>

            {/* Benefits Section */}
            <div id="benefits" class="py-20 bg-white dark:bg-gray-900">
                <Container>
                    <div class="max-w-3xl mx-auto text-center mb-20">
                        <div class="inline-flex items-center px-5 py-2.5 rounded-full bg-yellow-300/20 dark:bg-yellow-300/10 text-yellow-400 dark:text-yellow-300 mb-8">
                            <span class="text-sm font-semibold tracking-wide">Why Choose BuildNow</span>
                        </div>
                        <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 dark:text-white mb-8 tracking-tight">
                            Everything You Need to Import Successfully
                        </h2>
                        <p class="text-xl text-gray-700 dark:text-gray-200 leading-relaxed">
                            Join hundreds of Saudi businesses already growing through global imports
                        </p>
                    </div>
                    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
                        {benefits.map((benefit, index) => (
                            <div class="relative">
                                <div class="relative h-full p-8 bg-white dark:bg-gray-800 rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 border-2 border-yellow-300/30 dark:border-yellow-300/20">
                                    <div class="flex items-center justify-center w-16 h-16 mb-6 rounded-2xl bg-primary/10 hover:scale-110 transition-transform duration-300">
                                        <Icon name={benefit.icon} class="w-8 h-8 text-gray-900 dark:text-white" />
                                    </div>
                                    <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-3">{benefit.title}</h3>
                                    <p class="text-gray-700 dark:text-gray-200 mb-5 leading-relaxed">{benefit.description}</p>
                                    <div class="inline-block px-4 py-2 bg-primary/10 rounded-full">
                                        <span class="text-sm font-semibold text-gray-900 dark:text-white">{benefit.highlight}</span>
                                    </div>
                                </div>
                            </div>
                        ))}
                    </div>
                </Container>
            </div>

            {/* How It Works Section */}
            <div class="py-20 bg-white dark:bg-gray-900">
                <Container>
                    <div class="max-w-3xl mx-auto text-center mb-16">
                        <div class="inline-flex items-center px-5 py-2.5 rounded-full bg-yellow-300/20 dark:bg-yellow-300/10 text-yellow-400 dark:text-yellow-300 mb-8">
                            <span class="text-sm font-semibold tracking-wide">Simple Process</span>
                        </div>
                        <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 dark:text-white mb-8 tracking-tight">
                            Start Importing in Three Steps
                        </h2>
                        <p class="text-xl text-gray-700 dark:text-gray-200 leading-relaxed">
                            From supplier selection to delivery, we've got you covered
                        </p>
                    </div>
                    <div class="relative">
                        <div class="absolute left-0 top-1/2 w-full h-1 bg-gradient-to-r from-yellow-300/20 via-yellow-300 to-yellow-300/20 -translate-y-1/2 hidden lg:block"></div>
                        <div class="grid lg:grid-cols-3 gap-8">
                            {[
                                {
                                    step: "01",
                                    title: "Find Suppliers",
                                    description: "Browse our network of verified global suppliers or get AI-matched recommendations.",
                                    icon: "magnifying-glass"
                                },
                                {
                                    step: "02",
                                    title: "Place Order",
                                    description: "Select products, get instant credit approval, and confirm your order.",
                                    icon: "shopping-cart"
                                },
                                {
                                    step: "03",
                                    title: "Receive & Pay Later",
                                    description: "Get your goods quality-checked and delivered, then pay in installments.",
                                    icon: "truck"
                                }
                            ].map((item, index) => (
                                <div class="relative">
                                    <div class="relative z-10 bg-gray-50 dark:bg-gray-800 rounded-2xl p-8 shadow-xl hover:shadow-2xl transition-all duration-300 h-full border-2 border-yellow-300/30 dark:border-yellow-300/20">
                                        <div class="absolute -top-6 left-8 bg-yellow-300 text-gray-900 text-xl font-bold w-14 h-14 rounded-xl flex items-center justify-center shadow-lg hover:scale-110 transition-transform duration-300">
                                            {item.step}
                                        </div>
                                        <div class="pt-8">
                                            <div class="flex items-center gap-4 mb-4">
                                                <Icon name={item.icon} class="w-7 h-7 text-yellow-400" />
                                                <h3 class="text-2xl font-bold text-gray-900 dark:text-white">{item.title}</h3>
                                            </div>
                                            <p class="text-gray-700 dark:text-gray-200 leading-relaxed min-h-[3rem]">{item.description}</p>
                                        </div>
                                    </div>
                                </div>
                            ))}
                        </div>
                    </div>
                </Container>
            </div>

            {/* Features Section */}
            <div class="py-20 bg-white dark:bg-gray-900">
                <Container>
                    <div class="grid lg:grid-cols-2 gap-20 items-center">
                        <div class="space-y-10">
                            <div class="inline-flex items-center px-5 py-2.5 rounded-full bg-yellow-300/20 dark:bg-yellow-300/10 text-yellow-400 dark:text-yellow-300 mb-8">
                                <span class="text-sm font-semibold tracking-wide">Platform Features</span>
                            </div>
                            <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 dark:text-white tracking-tight">
                                Advanced Tools for Modern Importers
                            </h2>
                            <div class="space-y-6">
                                {features.map(feature => (
                                    <div class="flex items-start gap-5 p-7 bg-gray-50 dark:bg-gray-800 rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 group">
                                        <div class="flex-shrink-0 w-14 h-14 rounded-xl bg-yellow-300/20 dark:bg-yellow-300/10 flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
                                            <Icon name={feature.icon} class="w-7 h-7 text-yellow-400 dark:text-yellow-300" />
                                        </div>
                                        <div>
                                            <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-3">{feature.title}</h3>
                                            <p class="text-gray-700 dark:text-gray-200 leading-relaxed">{feature.description}</p>
                                        </div>
                                    </div>
                                ))}
                            </div>
                        </div>
                        <div class="relative">
                            <div class="absolute inset-0 bg-gradient-to-br from-primary to-primary-dark opacity-10 rounded-3xl transform -rotate-3"></div>
                            <div class="relative bg-gray-50 dark:bg-gray-800 rounded-3xl p-8 shadow-2xl">
                                <div class="aspect-video rounded-xl overflow-hidden bg-gray-100 dark:bg-gray-700">
                                    <img 
                                        src="/images/dashboard-preview.png" 
                                        alt="Platform Dashboard Preview" 
                                        class="w-full h-full object-cover"
                                    />
                                </div>
                                <div class="absolute -bottom-6 left-1/2 -translate-x-1/2 bg-gray-50 dark:bg-gray-800 px-8 py-4 rounded-full shadow-xl">
                                    <div class="flex items-center gap-4">
                                        <div class="flex -space-x-3">
                                            {[1, 2, 3].map(i => (
                                                <img 
                                                    src={`/images/avatar-${i}.png`}
                                                    alt={`Business ${i}`}
                                                    class="w-10 h-10 rounded-full border-2 border-gray-800"
                                                />
                                            ))}
                                        </div>
                                        <span class="text-sm font-semibold text-gray-900 dark:text-white">
                                            Join 500+ businesses
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </Container>
            </div>

            {/* CTA Section */}
            <div class="py-20 bg-white dark:bg-gray-900">
                <Container>
                    <div class="relative overflow-hidden rounded-3xl border-2 border-yellow-300 shadow-[0_0_15px_rgba(253,224,71,0.3)] dark:border-yellow-300 dark:shadow-[0_0_15px_rgba(253,224,71,0.15)]">
                        <div class="relative px-10 py-20 sm:px-20 sm:py-28 backdrop-blur-sm bg-white/50 dark:bg-gray-900/50">
                            <div class="max-w-3xl mx-auto text-center">
                                <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-8 tracking-tight">
                                    Ready to Go Global?
                                </h2>
                                <p class="text-xl text-gray-700 dark:text-gray-200 leading-relaxed mb-12">
                                    Join leading Saudi businesses who are using our import financing solution to access global markets and grow their business.
                                </p>
                                <div class="flex justify-center">
                                    <button 
                                        onclick="openLeadForm()"
                                        class="w-full sm:w-auto px-8 py-4 bg-yellow-300 text-gray-900 rounded-xl hover:bg-yellow-400 transition-all duration-300 font-semibold text-lg shadow-[0_0_15px_rgba(253,224,71,0.3)] dark:shadow-[0_0_15px_rgba(253,224,71,0.15)]"
                                    >
                                        <span class="relative z-10 flex items-center justify-center">
                                            Start Importing Now
                                            <Icon name="arrow-right" class="w-5 h-5 ml-2 transition-transform group-hover:translate-x-1" />
                                        </span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </Container>
            </div>
        </div>
    </div>
</Layout>

<style>
    @keyframes float {
        0%, 100% { 
            transform: translateY(0) rotate(0deg);
            box-shadow: 0 0 15px rgba(253, 224, 71, 0.2);
        }
        50% { 
            transform: translateY(-20px) rotate(1deg);
            box-shadow: 0 0 25px rgba(253, 224, 71, 0.3);
        }
    }

    @keyframes float-delayed {
        0%, 100% { transform: translateY(0) rotate(0deg); }
        50% { transform: translateY(-15px) rotate(-1deg); }
    }

    @keyframes float-slow {
        0%, 100% { transform: translateY(0) rotate(0deg); }
        50% { transform: translateY(-10px) rotate(1deg); }
    }

    @keyframes float-slower {
        0%, 100% { transform: translateY(0) rotate(0deg); }
        50% { transform: translateY(-8px) rotate(-1deg); }
    }

    .animate-float {
        animation: float 15s ease-in-out infinite;
    }

    .animate-float-delayed {
        animation: float-delayed 18s ease-in-out infinite;
        animation-delay: 2s;
    }

    .animate-float-slow {
        animation: float-slow 20s ease-in-out infinite;
        animation-delay: 1s;
    }

    .animate-float-slower {
        animation: float-slower 22s ease-in-out infinite;
        animation-delay: 3s;
    }

    /* Enhance text rendering */
    h1, h2, h3, h4 {
        text-rendering: optimizeLegibility;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
    }

    /* Typography enhancements */
    h1 {
        font-size: 4rem;
        line-height: 1.1;
        letter-spacing: -0.02em;
    }

    h2 {
        font-size: 2.5rem;
        line-height: 1.2;
        letter-spacing: -0.01em;
    }

    h3 {
        font-size: 1.5rem;
        line-height: 1.3;
    }

    p {
        font-size: 1.125rem;
        line-height: 1.6;
    }

    /* Consistent highlight colors */
    .text-primary {
        color: #facc15;
    }

    .bg-primary {
        background-color: #facc15;
    }

    .border-primary {
        border-color: #facc15;
    }

    /* Neon effects */
    .neon-border {
        border: 2px solid #facc15;
        box-shadow: 0 0 15px rgba(253, 224, 71, 0.3);
    }

    .neon-text {
        color: #facc15;
        text-shadow: 0 0 10px rgba(253, 224, 71, 0.3);
    }

    /* Dark mode adjustments */
    .dark .neon-border {
        border-color: #fef08a;
        box-shadow: 0 0 15px rgba(253, 224, 71, 0.15);
    }

    .dark .neon-text {
        color: #fef08a;
        text-shadow: 0 0 10px rgba(253, 224, 71, 0.15);
    }
</style> 