---
import Layout from "../layouts/Layout.astro";
import Container from "../components/Container.astro";
import Icon from "../components/Icon.astro";

const values = [
    {
        title: "Innovation First",
        description: "We're reimagining B2B trade financing through cutting-edge technology and data-driven solutions.",
        icon: "sparkles"
    },
    {
        title: "Trust & Security",
        description: "Building lasting relationships through transparency, reliability, and bank-grade security measures.",
        icon: "shield-check"
    },
    {
        title: "Customer Success",
        description: "Your growth is our success. We're committed to providing exceptional support at every step.",
        icon: "users"
    },
    {
        title: "Global Impact",
        description: "Facilitating cross-border trade to create opportunities and drive economic growth.",
        icon: "globe"
    }
];

const stats = [
    { value: "2021", label: "Founded" },
    { value: "40+", label: "Team Members" },
    { value: "3", label: "Global Offices" },
    { value: "500+", label: "Businesses Served" }
];

const milestones = [
    {
        year: "2021",
        title: "Vision to Reality",
        description: "Launched with a mission to transform B2B trade financing in Saudi Arabia, backed by leading investors.",
        icon: "light-bulb"
    },
    {
        year: "2022",
        title: "Platform Launch",
        description: "Successfully launched our core platform, onboarded 100+ businesses, and established key banking partnerships.",
        icon: "rocket"
    },
    {
        year: "2023",
        title: "Regional Expansion",
        description: "Expanded operations across Saudi Arabia, processed 1B+ SAR in transactions, and grew team to 40+ members.",
        icon: "chart-bar"
    },
    {
        year: "2024",
        title: "Innovation & Growth",
        description: "Introducing AI-powered credit assessment, expanding to MENA region, and launching new financial products.",
        icon: "sparkles"
    }
];

const founders = [
    {
        name: "Founder Name",
        role: "Chief Executive Officer",
        description: "Former fintech executive with 15+ years of experience in digital banking and financial innovation.",
        image: "/images/founder-1.jpg",
        linkedin: "#"
    },
    {
        name: "Founder Name",
        role: "Chief Technology Officer",
        description: "Tech veteran who led development of multiple successful fintech platforms across MENA region.",
        image: "/images/founder-2.jpg",
        linkedin: "#"
    },
    {
        name: "Founder Name",
        role: "Chief Operating Officer",
        description: "20+ years of experience in trade finance and supply chain operations across global markets.",
        image: "/images/founder-3.jpg",
        linkedin: "#"
    }
];
---

<Layout title="About Us | BuildNow">
    <div class="relative">
        {/* Background Elements */}
        <div class="absolute inset-0 pointer-events-none overflow-hidden">
            <div class="absolute inset-0 bg-white dark:bg-gray-900"></div>
            {/* Yellow blobs with enhanced animation */}
            <div class="absolute right-[5%] -top-20 w-[800px] h-[800px] bg-yellow-300/10 dark:bg-yellow-300/5 rounded-full blur-3xl animate-float"></div>
            <div class="absolute -left-[10%] top-[30%] w-[600px] h-[600px] bg-yellow-300/8 dark:bg-yellow-300/5 rounded-full blur-3xl animate-float-delayed"></div>
            <div class="absolute right-[15%] top-[45%] w-[500px] h-[500px] bg-yellow-300/10 dark:bg-yellow-300/5 rounded-full blur-3xl animate-float"></div>
            <div class="absolute -left-[5%] top-[60%] w-[700px] h-[700px] bg-yellow-300/8 dark:bg-yellow-300/5 rounded-full blur-3xl animate-float-delayed"></div>
        </div>

        {/* Content */}
        <div class="relative">
            {/* Hero Section */}
            <div class="relative min-h-[80vh] flex items-center">
                <Container>
                    <div class="max-w-4xl mx-auto text-center">
                        <div class="inline-flex items-center px-5 py-2.5 rounded-full bg-yellow-300/20 dark:bg-yellow-300/10 text-yellow-400 dark:text-yellow-300 mb-8">
                            <span class="text-sm font-semibold tracking-wide">Our Story</span>
                        </div>
                        <h1 class="text-4xl lg:text-6xl font-extrabold text-gray-900 dark:text-white mb-8 tracking-tight">
                            Building the Future of <span class="text-yellow-400 dark:text-yellow-300 neon-text">B2B Trade</span>
                        </h1>
                        <p class="text-xl text-gray-700 dark:text-gray-200 leading-relaxed mb-12 max-w-3xl mx-auto">
                            We're a team of innovators, technologists, and industry experts united by a single mission: to revolutionize how businesses trade and grow in Saudi Arabia and beyond.
                        </p>
                        <div class="grid grid-cols-2 md:grid-cols-4 gap-8 max-w-3xl mx-auto">
                            {stats.map(stat => (
                                <div class="text-center">
                                    <div class="text-3xl font-bold text-yellow-400 dark:text-yellow-300 neon-text mb-2">{stat.value}</div>
                                    <p class="text-sm font-medium text-gray-700 dark:text-gray-300">{stat.label}</p>
                                </div>
                            ))}
                        </div>
                    </div>
                </Container>
            </div>

            {/* Mission Section */}
            <div class="py-20 bg-white dark:bg-gray-900">
                <Container>
                    <div class="grid lg:grid-cols-2 gap-20 items-center">
                        <div class="relative">
                            <div class="aspect-square rounded-3xl overflow-hidden">
                                {/* Replace with actual office/team image */}
                                <img 
                                    src="/images/office-culture.jpg" 
                                    alt="Our Office Culture" 
                                    class="w-full h-full object-cover"
                                />
                            </div>
                            <div class="absolute -bottom-8 -right-8 bg-yellow-300 text-gray-900 p-8 rounded-2xl shadow-xl max-w-sm">
                                <p class="text-lg font-semibold">
                                    "We're building technology that makes trade financing accessible to all businesses."
                                </p>
                                <div class="mt-4 flex items-center gap-4">
                                    <img 
                                        src="/images/ceo-avatar.jpg" 
                                        alt="CEO" 
                                        class="w-12 h-12 rounded-full"
                                    />
                                    <div>
                                        <div class="font-semibold">CEO Name</div>
                                        <div class="text-sm">Founder & CEO</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="space-y-8">
                            <div class="inline-flex items-center px-5 py-2.5 rounded-full bg-yellow-300/20 dark:bg-yellow-300/10 text-yellow-400 dark:text-yellow-300">
                                <span class="text-sm font-semibold tracking-wide">Our Mission</span>
                            </div>
                            <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 dark:text-white tracking-tight">
                                Empowering Business Growth Through Innovation
                            </h2>
                            <p class="text-xl text-gray-700 dark:text-gray-200 leading-relaxed">
                                We believe that every business deserves access to efficient trade financing. Our platform combines cutting-edge technology with deep industry expertise to make this vision a reality.
                            </p>
                            <div class="space-y-6">
                                {[
                                    "Revolutionizing B2B trade financing through technology",
                                    "Creating opportunities for businesses to grow globally",
                                    "Building a more inclusive financial ecosystem"
                                ].map(item => (
                                    <div class="flex items-center gap-4">
                                        <div class="flex-shrink-0 w-6 h-6 rounded-full bg-yellow-300 flex items-center justify-center">
                                            <Icon name="check" class="w-4 h-4 text-gray-900" />
                                        </div>
                                        <span class="text-lg text-gray-700 dark:text-gray-200">{item}</span>
                                    </div>
                                ))}
                            </div>
                        </div>
                    </div>
                </Container>
            </div>

            {/* Values Section */}
            <div class="py-20 bg-gray-50 dark:bg-gray-800">
                <Container>
                    <div class="text-center max-w-3xl mx-auto mb-16">
                        <div class="inline-flex items-center px-5 py-2.5 rounded-full bg-yellow-300/20 dark:bg-yellow-300/10 text-yellow-400 dark:text-yellow-300 mb-8">
                            <span class="text-sm font-semibold tracking-wide">Our Values</span>
                        </div>
                        <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 dark:text-white mb-8 tracking-tight">
                            The Principles That Drive Us
                        </h2>
                        <p class="text-xl text-gray-700 dark:text-gray-200 leading-relaxed">
                            Our values shape everything we do, from product development to customer service
                        </p>
                    </div>
                    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
                        {values.map(value => (
                            <div class="relative">
                                <div class="h-full p-8 bg-white dark:bg-gray-900 rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300">
                                    <div class="flex items-center justify-center w-16 h-16 mb-6 rounded-2xl bg-yellow-300/20 dark:bg-yellow-300/10 group-hover:bg-yellow-300/30 transition-colors duration-300">
                                        <Icon name={value.icon} class="w-8 h-8 text-yellow-400" />
                                    </div>
                                    <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-4">{value.title}</h3>
                                    <p class="text-gray-700 dark:text-gray-200">{value.description}</p>
                                </div>
                            </div>
                        ))}
                    </div>
                </Container>
            </div>

            {/* Culture Section - Updated icons */}
            <div class="py-20 bg-white dark:bg-gray-900">
                <Container>
                    <div class="max-w-7xl mx-auto">
                        <div class="text-center mb-16">
                            <div class="inline-flex items-center px-5 py-2.5 rounded-full bg-yellow-300/20 dark:bg-yellow-300/10 text-yellow-400 dark:text-yellow-300 mb-8">
                                <span class="text-sm font-semibold tracking-wide">Our Culture</span>
                            </div>
                            <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 dark:text-white mb-8 tracking-tight">
                                Where Innovation Meets Purpose
                            </h2>
                        </div>

                        <div class="grid lg:grid-cols-3 gap-8">
                            {/* Vision */}
                            <div class="relative group">
                                <div class="absolute inset-0 bg-gradient-to-r from-yellow-300 to-yellow-400 rounded-3xl opacity-0 group-hover:opacity-10 transition-opacity duration-300"></div>
                                <div class="relative h-full p-8 bg-white dark:bg-gray-800 rounded-3xl">
                                    <div class="flex items-center justify-center w-16 h-16 mb-8 rounded-2xl bg-yellow-300/20">
                                        <Icon name="light-bulb" class="w-8 h-8 text-yellow-400" />
                                    </div>
                                    <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">Our Vision</h3>
                                    <p class="text-gray-700 dark:text-gray-300 mb-6">
                                        Building a future where every business has equal access to growth opportunities through innovative financial solutions.
                                    </p>
                                    <div class="space-y-4">
                                        {[
                                            "Data-driven decision making",
                                            "Innovation at our core",
                                            "Global perspective"
                                        ].map(item => (
                                            <div class="flex items-center gap-3">
                                                <Icon name="check-circle" class="w-5 h-5 text-yellow-400" />
                                                <span class="text-gray-600 dark:text-gray-400">{item}</span>
                                            </div>
                                        ))}
                                    </div>
                                </div>
                            </div>

                            {/* Environment */}
                            <div class="relative group">
                                <div class="absolute inset-0 bg-gradient-to-r from-yellow-300 to-yellow-400 rounded-3xl opacity-0 group-hover:opacity-10 transition-opacity duration-300"></div>
                                <div class="relative h-full p-8 bg-white dark:bg-gray-800 rounded-3xl">
                                    <div class="flex items-center justify-center w-16 h-16 mb-8 rounded-2xl bg-yellow-300/20">
                                        <Icon name="users-group" class="w-8 h-8 text-yellow-400" />
                                    </div>
                                    <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">Our Environment</h3>
                                    <p class="text-gray-700 dark:text-gray-300 mb-6">
                                        A dynamic workspace where creativity flourishes and every team member is empowered to make an impact.
                                    </p>
                                    <div class="space-y-4">
                                        {[
                                            "Collaborative workspace",
                                            "Continuous learning",
                                            "Work-life harmony"
                                        ].map(item => (
                                            <div class="flex items-center gap-3">
                                                <Icon name="check-circle" class="w-5 h-5 text-yellow-400" />
                                                <span class="text-gray-600 dark:text-gray-400">{item}</span>
                                            </div>
                                        ))}
                                    </div>
                                </div>
                            </div>

                            {/* Impact */}
                            <div class="relative group">
                                <div class="absolute inset-0 bg-gradient-to-r from-yellow-300 to-yellow-400 rounded-3xl opacity-0 group-hover:opacity-10 transition-opacity duration-300"></div>
                                <div class="relative h-full p-8 bg-gray-50 dark:bg-gray-800 rounded-3xl">
                                    <div class="flex items-center justify-center w-16 h-16 mb-8 rounded-2xl bg-yellow-300/20">
                                        <Icon name="chart-bar" class="w-8 h-8 text-yellow-400" />
                                    </div>
                                    <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">Our Impact</h3>
                                    <p class="text-gray-700 dark:text-gray-300 mb-6">
                                        Creating lasting change in the financial ecosystem while fostering economic growth across the region.
                                    </p>
                                    <div class="space-y-4">
                                        {[
                                            "Economic empowerment",
                                            "Sustainable growth",
                                            "Community focus"
                                        ].map(item => (
                                            <div class="flex items-center gap-3">
                                                <Icon name="check-circle" class="w-5 h-5 text-yellow-400" />
                                                <span class="text-gray-600 dark:text-gray-400">{item}</span>
                                            </div>
                                        ))}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </Container>
            </div>

            {/* Journey Section - Redesigned */}
            <div class="py-20 bg-white dark:bg-gray-900">
                <Container>
                    <div class="text-center max-w-3xl mx-auto mb-16">
                        <div class="inline-flex items-center px-5 py-2.5 rounded-full bg-yellow-300/20 dark:bg-yellow-300/10 text-yellow-400 dark:text-yellow-300 mb-8">
                            <span class="text-sm font-semibold tracking-wide">Our Journey</span>
                        </div>
                        <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 dark:text-white mb-8 tracking-tight">
                            Milestones That Define Us
                        </h2>
                    </div>
                    <div class="max-w-5xl mx-auto">
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                            {milestones.map((milestone, index) => (
                                <div class="group relative">
                                    <div class="absolute -inset-1 rounded-3xl bg-gradient-to-r from-yellow-300 to-yellow-400 opacity-10 blur transition duration-300 group-hover:opacity-20"></div>
                                    <div class="relative flex items-center gap-6 p-6 bg-white dark:bg-gray-800 rounded-2xl">
                                        <div class="flex-shrink-0">
                                            <div class="w-16 h-16 flex items-center justify-center rounded-xl bg-yellow-300/20 dark:bg-yellow-300/10">
                                                <Icon name={milestone.icon} class="w-8 h-8 text-yellow-400" />
                                            </div>
                                        </div>
                                        <div class="flex-1">
                                            <div class="flex items-center gap-2 mb-2">
                                                <span class="text-sm font-semibold text-yellow-400">{milestone.year}</span>
                                                <span class="h-px flex-1 bg-yellow-300/20"></span>
                                            </div>
                                            <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2">{milestone.title}</h3>
                                            <p class="text-gray-600 dark:text-gray-300">{milestone.description}</p>
                                        </div>
                                    </div>
                                </div>
                            ))}
                        </div>
                    </div>
                </Container>
            </div>

            {/* Founders Section */}
            <div class="py-20 bg-white dark:bg-gray-900">
                <Container>
                    <div class="text-center max-w-3xl mx-auto mb-16">
                        <div class="inline-flex items-center px-5 py-2.5 rounded-full bg-yellow-300/20 dark:bg-yellow-300/10 text-yellow-400 dark:text-yellow-300 mb-8">
                            <span class="text-sm font-semibold tracking-wide">Our Founders</span>
                        </div>
                        <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 dark:text-white mb-8 tracking-tight">
                            Meet the Visionaries
                        </h2>
                        <p class="text-xl text-gray-700 dark:text-gray-200 leading-relaxed">
                            Our founders bring together decades of experience in fintech, banking, and technology
                        </p>
                    </div>
                    <div class="grid md:grid-cols-3 gap-12">
                        {founders.map(founder => (
                            <div class="group">
                                <div class="relative mb-8">
                                    <div class="aspect-[4/5] rounded-2xl overflow-hidden">
                                        <img 
                                            src={founder.image} 
                                            alt={founder.name} 
                                            class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
                                        />
                                    </div>
                                    <a 
                                        href={founder.linkedin}
                                        target="_blank"
                                        rel="noopener noreferrer" 
                                        class="absolute bottom-4 right-4 w-10 h-10 rounded-full bg-white dark:bg-gray-900 shadow-lg flex items-center justify-center text-yellow-400 hover:text-yellow-500 transition-colors"
                                    >
                                        <Icon name="linkedin" class="w-5 h-5" />
                                    </a>
                                </div>
                                <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-2">{founder.name}</h3>
                                <p class="text-yellow-400 dark:text-yellow-300 font-medium mb-4">{founder.role}</p>
                                <p class="text-gray-600 dark:text-gray-400">{founder.description}</p>
                            </div>
                        ))}
                    </div>
                </Container>
            </div>

            {/* Join Us CTA */}
            <div class="py-20 bg-white dark:bg-gray-900">
                <Container>
                    <div class="relative overflow-hidden rounded-3xl border-2 border-yellow-300 shadow-[0_0_15px_rgba(253,224,71,0.3)] dark:border-yellow-300 dark:shadow-[0_0_15px_rgba(253,224,71,0.15)]">
                        <div class="relative px-10 py-20 sm:px-20 sm:py-28 backdrop-blur-sm bg-white/50 dark:bg-gray-900/50">
                            <div class="max-w-3xl mx-auto text-center">
                                <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-8 tracking-tight">
                                    Join Us in Reshaping B2B Trade
                                </h2>
                                <p class="text-xl text-gray-700 dark:text-gray-200 leading-relaxed mb-12">
                                    We're always looking for talented individuals who share our vision and values. Check out our open positions and become part of our journey.
                                </p>
                                <div class="flex justify-center gap-6">
                                    <a 
                                        href="/careers" 
                                        class="px-8 py-4 bg-yellow-300 text-gray-900 rounded-xl hover:bg-yellow-400 transition-all duration-300 font-semibold text-lg shadow-[0_0_15px_rgba(253,224,71,0.3)] dark:shadow-[0_0_15px_rgba(253,224,71,0.15)]"
                                    >
                                        View Open Positions
                                    </a>
                                    <a 
                                        href="/contact" 
                                        class="px-8 py-4 bg-gray-100 dark:bg-gray-800 text-gray-900 dark:text-white rounded-xl hover:bg-gray-200 dark:hover:bg-gray-700 transition-all duration-300 font-semibold text-lg"
                                    >
                                        Contact Us
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </Container>
            </div>
        </div>
    </div>
</Layout>

<style>
    /* Reuse your existing animations and styles */
    @keyframes float {
        0%, 100% { 
            transform: translateY(0) rotate(0deg);
            box-shadow: 0 0 15px rgba(253, 224, 71, 0.2);
        }
        50% { 
            transform: translateY(-20px) rotate(1deg);
            box-shadow: 0 0 25px rgba(253, 224, 71, 0.3);
        }
    }

    @keyframes float-delayed {
        0%, 100% { transform: translateY(0) rotate(0deg); }
        50% { transform: translateY(-15px) rotate(-1deg); }
    }

    .animate-float {
        animation: float 15s ease-in-out infinite;
    }

    .animate-float-delayed {
        animation: float-delayed 18s ease-in-out infinite;
        animation-delay: 2s;
    }

    /* Typography enhancements */
    h1, h2, h3, h4 {
        text-rendering: optimizeLegibility;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
    }

    .neon-text {
        text-shadow: 0 0 10px rgba(253, 224, 71, 0.3);
    }

    .dark .neon-text {
        text-shadow: 0 0 10px rgba(253, 224, 71, 0.15);
    }
</style> 