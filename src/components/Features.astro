  function updateFeatures(businessType: BusinessType) {
    const features = solutions[businessType];
    const featureCards = document.querySelectorAll<HTMLElement>('.relative.space-y-8');
    
    featureCards.forEach((card, index) => {
      if (features && features[index]) {
        const svg = card.querySelector<SVGElement>('svg');
        const heading = card.querySelector<HTMLHeadingElement>('h5');
        const description = card.querySelector<HTMLParagraphElement>('p');
        
        if (svg && heading && description) {
          svg.innerHTML = features[index].icon;
          heading.textContent = features[index].title;
          description.textContent = features[index].description;
        }
      }
    });
  }

  document.querySelectorAll<HTMLButtonElement>('.business-selector').forEach(button => {
    button.addEventListener('click', () => {
      const businessType = button.dataset.type as BusinessType;
      if (businessType) {
        updateFeatures(businessType);
        
        // Update active state
        document.querySelectorAll<HTMLButtonElement>('.business-selector').forEach(btn => {
          btn.classList.remove('border-primary', 'bg-primary/5');
        });
        button.classList.add('border-primary', 'bg-primary/5');
      }
    });
  });

  // Set initial state
  updateFeatures('contractor');
  const initialButton = document.querySelector<HTMLButtonElement>('[data-type="contractor"]');
  if (initialButton) {
    initialButton.classList.add('border-primary', 'bg-primary/5');
