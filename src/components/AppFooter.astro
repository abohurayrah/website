---
import Container from "./Container.astro";
import Icon from "./Icon.astro";

const footerLinks = [
    {
        title: "Solutions",
        links: [
            { label: "Credit Solutions", href: "/products/consumers/credit-solutions" },
            { label: "BNPL for Suppliers", href: "/products/suppliers/bnpl-button" },
            { label: "Financial Tools", href: "/tools/financial-calculators" }
        ]
    },
    {
        title: "Company",
        links: [
            { label: "About Us", href: "/about" },
            { label: "Careers", href: "/careers" },
            { label: "Contact", href: "/contact" }
        ]
    },
    {
        title: "Resources",
        links: [
            { label: "Blog", href: "/blog" },
            { label: "FAQs", href: "/faqs" },
            { label: "Support", href: "/support" }
        ]
    }
];

const socialLinks = [
    { icon: "linkedin", href: "#" },
    { icon: "twitter", href: "#" },
    { icon: "facebook", href: "#" }
];
---

<footer class="bg-white dark:bg-gray-900 border-t border-gray-100 dark:border-gray-800">
    <Container>
        <div class="py-12 md:py-16">
            <div class="grid grid-cols-1 md:grid-cols-4 gap-8 lg:gap-12">
                <div>
                    <div class="flex items-center space-x-2 mb-6">
                        <img src="/images/logo.png" alt="Buildnow Logo" class="h-10 w-auto" />
                        <span class="text-2xl font-bold text-gray-900 dark:text-white">Buildnow</span>
                    </div>
                    <p class="text-lg text-gray-600 dark:text-gray-400 mb-8">
                        Empowering businesses with smart B2B financing solutions. Get instant access to the capital you need to grow.
                    </p>
                    <div class="flex space-x-4">
                        {socialLinks.map(link => (
                            <a 
                                href={link.href}
                                class="w-12 h-12 rounded-full bg-gray-100 dark:bg-gray-800 flex items-center justify-center text-gray-600 dark:text-gray-400 hover:bg-primary hover:text-white transition-colors"
                                target="_blank"
                                rel="noopener noreferrer"
                            >
                                <Icon name={link.icon} class="w-6 h-6" />
                            </a>
                        ))}
                    </div>
                </div>

                {footerLinks.map(section => (
                    <div>
                        <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">{section.title}</h3>
                        <ul class="space-y-3">
                            {section.links.map(link => (
                                <li>
                                    <a 
                                        href={link.href}
                                        class="text-lg text-gray-600 dark:text-gray-400 hover:text-primary dark:hover:text-white transition-colors"
                                    >
                                        {link.label}
                                    </a>
                                </li>
                            ))}
                        </ul>
                    </div>
                ))}
            </div>

            <div class="mt-12 pt-8 border-t border-gray-100 dark:border-gray-800">
                <div class="flex flex-col md:flex-row justify-between items-center gap-4">
                    <p class="text-base text-gray-600 dark:text-gray-400">
                        Â© {new Date().getFullYear()} Buildnow. All rights reserved.
                    </p>
                    <div class="flex space-x-6">
                        <a href="/privacy" class="text-base text-gray-600 dark:text-gray-400 hover:text-primary dark:hover:text-white transition-colors">
                            Privacy Policy
                        </a>
                        <a href="/terms" class="text-base text-gray-600 dark:text-gray-400 hover:text-primary dark:hover:text-white transition-colors">
                            Terms of Service
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </Container>
</footer>